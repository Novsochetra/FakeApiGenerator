{
  "name": "nodejsonapi",
  "version": "1.0.0",
  "description": "Rich Json API",
  "main": "server.ts",
  "scripts": {
    "postinstall": "yarn build",
    "test": "jest",
    "tsc": "ts-node ./module/**",
    "build": "tsc --project ./ && yarn generate-api && cp -rf src/output build/src && cp -rf src/views build/src",
    "start:dev": "nodemon ./src/server.ts",
    "start": "cd ./build/src && node server.js",
    "user": "npm run build && node ./build/module/user/index.js",
    "generate-api": "ts-node src/generator.ts"
  },
  "keywords": [
    "json",
    "api"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "ejs": "^3.1.3",
    "express": "^4.17.3",
    "faker": "^4.1.0",
    "vhost": "^3.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.11.1",
    "@babel/preset-env": "^7.11.0",
    "@babel/preset-typescript": "^7.10.4",
    "@types/cors": "^2.8.7",
    "@types/express": "^4.17.7",
    "@types/faker": "^4.1.12",
    "@types/jest": "^26.0.9",
    "@types/node": "^14.0.27",
    "@types/vhost": "^3.0.1",
    "babel-jest": "^26.2.2",
    "jest": "^26.2.2",
    "nodemon": "^2.0.4",
    "ts-jest": "^26.1.4",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ]
  }
}
